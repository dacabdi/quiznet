{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "launch-debug-server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/debug/server.app",
            "args": ["8080"],
            "stopAtEntry": false,
            "miDebuggerPath": "gdb",
            "cwd": "${workspaceFolder}/bin/debug/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "launchCompleteCommand": "exec-run",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build-debug-server"
        },
        {
            "name": "launch-debug-client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/debug/client.app",
            "args": ["127.0.0.0", "8080"],
            "stopAtEntry": false,
            "miDebuggerPath": "gdb",
            "cwd": "${workspaceFolder}/bin/debug/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "launchCompleteCommand": "exec-run",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build-debug-client"
        }
    ]
}